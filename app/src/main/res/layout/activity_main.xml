<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:fontFamily="monospace"
        android:gravity="end"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <!-- First TableRow for numbers -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn8"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>


            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                style="@style/DigitBtnStyle"
                android:textSize="20sp" />

            <Button
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFois"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>
        </TableRow>

        <!-- Second TableRow for numbers -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn5"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn6"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDiv"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>
        </TableRow>

        <!-- Third TableRow for numbers -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn3"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMoins"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>
        </TableRow>

        <!-- Fourth TableRow for operators -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReset"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnZero"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

            <Button
                android:text="âŒ«"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReturn"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>


            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPlus"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>

        </TableRow>

        <!-- Fifth TableRow for equals button -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnEgal"
                android:layout_span="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="setOperator"
                style="@style/DigitBtnStyle"
                android:textSize="20sp"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
